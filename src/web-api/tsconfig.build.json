{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "middleware": [
        "middleware/index.ts"
      ],
      "prisma": [
        "prisma/client.ts"
      ],
      "shared": [
        "shared/index.ts"
      ],
      "model": [
        "model/index.ts"
      ],
      "routes": [
        "routes/index.ts"
      ]
    }
  },
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
