{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@application": ["src/application/index"],
      "@domain": ["src/domain/index"],
      "@infrastructure": ["src/infrastructure/index"],
      "@shared": ["src/shared/index"]
    }
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["**/*.ts", "/tests/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
